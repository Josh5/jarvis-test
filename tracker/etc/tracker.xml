<?xml version="1.0" encoding="utf-8"?>
<jarvis>
    <app format="json">
        <dataset_dir>/usr/share/jarvis/tracker/dataset/</dataset_dir>

        <default_libs>
            <lib path="/usr/share/jarvis/tracker/plugin/"/>
        </default_libs>

        <tracker requests="yes" errors="yes" logins="yes">
            <dbfile>/var/lib/jarvis/tracker/tracker.db</dbfile>
        </tracker>

        <login module="Jarvis::Login::None">
            <parameter name="username" value="x"/>
            <parameter name="group_list" value="x"/>
        </login>

        <!--
            If you want to use the login system, then uncomment this code
            and add a user to the 'tracker_users' table in the tracker database.

            Note that the 'group' column is not used, but must be an empty string.
        <login module="Jarvis::Login::Database">
            <parameter name="user_table" value="tracker_user"/>
            <parameter name="user_username_column" value="username"/>
            <parameter name="user_password_column" value="password"/>
            <parameter name="group_table" value="tracker_user"/>
            <parameter name="group_username_column" value="username"/>
            <parameter name="group_group_column" value="user_group"/>
        </login>
        -->

        <plugin dataset="list" access="*" module="JarvisTracker::List" add_headers="yes"/>
        <plugin dataset="source" access="*" module="JarvisTracker::Source" add_headers="yes"/>
        <plugin dataset="events" access="*" module="JarvisTracker::Events" add_headers="yes"/>
        <plugin dataset="reverse-dns-lookup" access="*" module="JarvisTracker::ReverseDnsLookup" add_headers="yes"/>
        <plugin dataset="dataset-info" access="*" module="JarvisTracker::DatasetInfo" add_headers="yes"/>

        <sessiondb store="driver:file;serializer:default;id:md5" cookie="TRACKER_CGISESSID">
            <parameter name="Directory" value="/tmp/tracker"/>
        </sessiondb>

        <!--database connect="dbi:SQLite:dbname=/var/lib/jarvis/tracker/tracker.db" username="" password=""/-->
        <database connect="dbi:Pg:dbname=tracker;host=localhost" username="tracker_owner" password="tracker_owner"/>
    </app>
</jarvis>


